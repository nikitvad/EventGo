<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="com.ghteam.eventgo.data.entity.Event" />

        <import
            alias="v"
            type="android.view.View" />
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/circle_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:visibility="@{event.ownerProfilePicture.empty ? v.GONE : v.VISIBLE}"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@{event.ownerProfilePicture}" />

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{event.ownerName}"
            app:layout_constraintBottom_toBottomOf="@id/circle_image"
            app:layout_constraintStart_toEndOf="@id/circle_image"
            app:layout_constraintTop_toTopOf="@id/circle_image" />


        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{event.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circle_image" />

        <ImageView
            android:id="@+id/iv_event_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@{event.images[0]}"
            app:layout_constraintTop_toBottomOf="@id/tv_event_name" />

        <TextView
            android:id="@+id/tv_event_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintHeight_default="wrap"
            android:maxLines="2"
            android:text="@{event.description}"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="@id/iv_event_image"
            app:layout_constraintStart_toEndOf="@id/iv_event_image"
            app:layout_constraintTop_toBottomOf="@id/tv_event_name" />

        <TextView
            android:id="@+id/tv_interested"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_event_description"
            app:layout_constraintStart_toEndOf="@id/iv_event_image"
            android:text="@string/interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_interested_count"
            android:layout_width="wrap_content"
            android:text="@{event.interestedCount}"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_interested"
            app:layout_constraintTop_toTopOf="@id/tv_interested"
            app:layout_constraintTop_toBottomOf="@id/tv_interested"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_going"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_event_description"
            app:layout_constraintStart_toEndOf="@id/tv_interested_count"
            android:text="going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_going_count"
            android:layout_width="wrap_content"
            android:text="@{event.goingCount}"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_going"
            app:layout_constraintTop_toTopOf="@id/tv_going"
            app:layout_constraintTop_toBottomOf="@id/tv_going"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

</layout>
