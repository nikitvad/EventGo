<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="com.ghteam.eventgo.data.entity.Event" />

        <variable
            name="user"
            type="com.ghteam.eventgo.data.entity.User" />

        <variable
            name="category"
            type="com.ghteam.eventgo.data.entity.Category" />

        <variable
            name="appLocation"
            type="com.ghteam.eventgo.data.entity.AppLocation" />

        <import
            alias="v"
            type="android.view.View" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="@color/lightBlue"
                app:expandedTitleMarginBottom="70dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_event_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_evetn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginStart="48dp"
                    android:lines="1"
                    android:text="Coffee"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    app:layout_collapseMode="parallax" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:elevation="0dp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:subtitle="sdfsdfsdf"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:title="asdfsdfasd" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.ghteam.eventgo.ui.activity.eventdetails.EventDetailsActivity">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:paddingBottom="10dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/owner_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/iv_profile_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/owner_image"
                        android:text="Jon Snow"
                        android:textSize="24sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_interested_going"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/owner">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:background="@color/lightBlue"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:drawableStart="@drawable/ic_grade_black_24dp"
                            android:drawableTint="@color/white"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"

                            android:text="@string/interested"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@color/lightBlue">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:drawableStart="@drawable/ic_done_black_24dp"
                            android:drawableTint="@color/white"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"

                            android:text="@string/going"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_room_black_24dp"
                    android:minHeight="60dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:text="fasdfasdfasdfasdfasdfasdfasdfsadvzxcvsadvascvzxcvxzcvzxcvvxzcvzxcvzx"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/ll_interested_going" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_event_black_24dp"
                    android:gravity="center_vertical"
                    android:minHeight="60dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:text="Saturday, February 17 at 10:30 AM - 5:30 PM"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_place" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:minHeight="60dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/tv_date">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/about"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="@string/lorem_ipsum"
                        android:textSize="18sp" />
                </LinearLayout>


            </android.support.constraint.ConstraintLayout>


        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>
