<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    tools:context="com.ghteam.eventgo.ui.dialog.SelectCategoriesDialog">

    <data>

        <variable
            name="categoryEntry"
            type="com.ghteam.eventgo.data.entity.CategoryEntry" />
    </data>

    <LinearLayout
        android:minWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{categoryEntry.name}" />

        <TextView
            android:id="@+id/tv_category_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{categoryEntry.icon}" />
    </LinearLayout>

</layout>
