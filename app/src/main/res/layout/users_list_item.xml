<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="user"
            type="com.ghteam.eventgo.data.entity.UserLocationInfo" />

        <variable
            name="distance"
            type="String" />

    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@{user.profileImageUrl}"

            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@{user.userDisplayName}"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/iv_profile_picture" />

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/lightBlue"
            android:gravity="center"
            android:text="invite"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@{distance}"
            app:layout_constraintStart_toEndOf="@id/iv_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

    </android.support.constraint.ConstraintLayout>
</layout>