<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="com.ghteam.eventgo.data.entity.User"/>
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@{user.profileImageUrl}"
            app:layout_constraintBottom_toBottomOf="@id/tv_interests"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@{user.firstName + ' ' + user.lastName}"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/iv_profile_picture" />

        <TextView
            android:id="@+id/tv_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="sdf"
            app:layout_constraintStart_toEndOf="@id/iv_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name" />
    </android.support.constraint.ConstraintLayout>
</layout>